<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nickhuang1.matrix.ActivityChoice">

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button9" />

    <Button
        android:text="Subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Multiply"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="To add, make sure that the dimensions of the inputted matrices are equivalent."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button11"
        android:id="@+id/textView13" />

    <TextView
        android:text="To subtract, make sure the dimensions of the inputted matrices are equivalent:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button10"
        android:layout_toEndOf="@+id/button11"
        android:id="@+id/textView14" />

    <TextView
        android:text="To multiply, make sure the column of the first matrice is equivalent to the row of the second column."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/button11"
        android:id="@+id/textView16" />

    <Button
        android:text="Reduce Row Echelon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignEnd="@+id/button9"
        android:layout_marginTop="34dp"
        android:id="@+id/button12" />

    <TextView
        android:text="This will compute row echelon of the first array. However, it is not reduce row echelon form."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button12"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginStart="11dp"
        android:id="@+id/textView17" />

    <Button
        android:text="LU Factor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button13" />

    <TextView
        android:text='"LU" factorization is used in order to solve equations. It takes way less steps.'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button13"
        android:layout_alignStart="@+id/textView17"
        android:id="@+id/textView12" />

</RelativeLayout>
